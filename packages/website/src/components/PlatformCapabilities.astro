    border-bottom: 1px solid var(--border-dim);
  }

  .code-label {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: #555;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .code-content {
    padding: 1rem;
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    line-height: 1.6;
    overflow-x: auto;
  }

  .code-content .cmd { color: #666; }
