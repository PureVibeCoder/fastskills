  .code-content .output { color: #27C93F; }
  .code-content .comment { color: #555; }
  .code-content .key { color: var(--neon-pink); }
  .code-content .string { color: #FFBD2E; }

  /* Feature List */
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.85rem;
    color: #aaa;
  }

  .check {
    color: #27C93F;
    font-weight: 700;
  }

  /* CTA Row */
  .cta-row {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .cta-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.3s ease;
    background: var(--neon-cyan);
    color: #000;
  }

  .cta-link:hover {
    box-shadow: 0 0 20px rgba(0, 240, 255, 0.4);
    transform: translateY(-2px);
  }

  .cta-link.secondary {
    background: transparent;
    color: #888;
    border: 1px solid var(--border-bright);
  }

  .cta-link.secondary:hover {
    color: #fff;
    border-color: #666;
    box-shadow: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .capabilities-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .card-body {
      padding: 1.5rem;
    }

    .cta-row {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
