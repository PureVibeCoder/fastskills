<style>
  .platform-section {
    position: relative;
    padding: var(--spacing-3xl) var(--spacing-md);
    background: var(--color-bg);
    overflow: hidden;
  }

  /* Subtle Grid Background - matches Hero */
  .cyber-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(var(--color-border) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-border) 1px, transparent 1px);
    background-size: 40px 40px;
    z-index: 0;
    pointer-events: none;
    mask-image: radial-gradient(ellipse at center, black 30%, transparent 80%);
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .status-line {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-primary);
    background: var(--color-primary-dim);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    border: 1px solid var(--color-primary);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    background: var(--color-primary);
    border-radius: 50%;
  }

  .status-dot.pulse {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 var(--color-primary-glow); }
    70% { box-shadow: 0 0 0 8px transparent; }
    100% { box-shadow: 0 0 0 0 transparent; }
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-sm);
  }

  .bracket {
    color: var(--color-primary);
    font-family: var(--font-mono);
  }

  .section-subtitle {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Grid */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-2xl);
  }

  /* Cards - Light Theme */
  .capability-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: all var(--transition-base);
    position: relative;
  }

  .capability-card.featured {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md), 0 0 0 1px var(--color-primary-dim);
  }

  .capability-card.featured::after {
    content: 'æ¨è';
    position: absolute;
    top: 12px;
    right: -28px;
    background: var(--color-primary);
    color: #fff;
    font-size: 0.65rem;
    font-weight: 700;
    padding: 0.2rem 2rem;
    transform: rotate(45deg);
    font-family: var(--font-mono);
  }

  .capability-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .capability-card.featured::before {
    opacity: 1;
    background: var(--color-primary);
  }

  .capability-card:hover {
    transform: translateY(-6px);
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--color-primary-dim);
  }

  .capability-card:hover::before {
    opacity: 1;
  }

  .card-header {
    background: var(--color-bg-tertiary);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid var(--color-border);
  }

  .terminal-controls {
    display: flex;
    gap: 6px;
  }

  .control {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .control.red { background: #FF5F56; }
  .control.yellow { background: #FFBD2E; }
  .control.green { background: #27C93F; }

  .card-badge {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-xs);
    letter-spacing: 0.5px;
  }

  .card-badge.cyan {
    background: var(--color-primary-dim);
    color: var(--color-primary);
    border: 1px solid var(--color-primary);
  }

  .card-badge.pink {
    background: var(--color-secondary-dim);
    color: var(--color-secondary);
    border: 1px solid var(--color-secondary);
  }

  .card-body {
    padding: var(--spacing-xl);
  }

  .icon-box {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
    background: var(--color-primary-dim);
    border: 1px solid var(--color-border);
    margin-bottom: var(--spacing-lg);
    transition: all 0.3s ease;
  }

  .icon {
    font-size: 1.75rem;
  }

  .capability-card:hover .icon-box.cyan-glow {
    box-shadow: var(--glow-primary);
    border-color: var(--color-primary);
  }

  .capability-card:hover .icon-box.pink-glow {
