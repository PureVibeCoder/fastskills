    transition: all 0.3s ease;
  }

  .icon {
    font-size: 1.75rem;
  }

  .capability-card:hover .icon-box.cyan-glow {
    box-shadow: 0 0 25px rgba(0, 240, 255, 0.3);
    border-color: rgba(0, 240, 255, 0.5);
  }

  .capability-card:hover .icon-box.pink-glow {
    box-shadow: 0 0 25px rgba(255, 46, 99, 0.3);
    border-color: rgba(255, 46, 99, 0.5);
  }

  .card-title {
