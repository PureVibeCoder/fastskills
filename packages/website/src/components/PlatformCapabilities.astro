    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .card-description {
    font-size: 0.9rem;
    color: #888;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  /* Code Block */
  .code-block {
    background: #0d0d0f;
    border: 1px solid var(--border-dim);
    border-radius: 6px;
    overflow: hidden;
    margin-bottom: 1.5rem;
  }

