  .card-description {
    font-size: 0.9rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
  }

  /* Code Block - Light Theme */
  .code-block {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    overflow: hidden;
    margin-bottom: var(--spacing-lg);
  }

  .code-header {
    background: var(--color-bg);
    padding: 0.4rem 0.75rem;
    border-bottom: 1px solid var(--color-border);
  }

  .code-label {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .code-content {
    padding: var(--spacing-md);
    margin: 0;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    line-height: 1.6;
    overflow-x: auto;
    color: var(--color-text);
  }

  .code-content .cmd { color: var(--color-text-secondary); }
  .code-content .keyword { color: var(--color-primary); }
  .code-content .output { color: var(--color-success); }
  .code-content .comment { color: var(--color-text-muted); }
  .code-content .key { color: var(--color-secondary); }
  .code-content .string { color: var(--color-warning); }

  /* Feature List */
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .feature-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .check {
    color: var(--color-success);
    font-weight: 700;
  }

  /* CTA Row */
  .cta-row {
    display: flex;
    justify-content: center;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
  }

  .cta-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    padding: 0.75rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
    background: var(--color-primary);
    color: #fff;
  }

  .cta-link:hover {
    background: var(--color-primary-hover);
    box-shadow: var(--glow-primary);
    transform: translateY(-2px);
  }

  .cta-link.secondary {
    background: transparent;
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
  }

  .cta-link.secondary:hover {
    color: var(--color-text);
    border-color: var(--color-text-secondary);
    box-shadow: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .capabilities-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.4rem;
    }

    .card-body {
      padding: var(--spacing-lg);
    }

    .cta-row {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
