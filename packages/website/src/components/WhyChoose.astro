    text-transform: uppercase;
    letter-spacing: -1px;
    position: relative;
    display: inline-block;
  }

  /* Glitch Effect */
  .section-title::before,
  .section-title::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-dark);
    opacity: 0.8;
