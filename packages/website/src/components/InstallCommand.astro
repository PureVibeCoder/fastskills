<style>
  .install-command-container {
    background: var(--color-bg-secondary, #f8f9fa);
    border: 1px solid var(--color-border, #e9ecef);
    border-radius: var(--radius-md, 8px);
    overflow: hidden;
    margin-top: var(--spacing-sm, 0.5rem);
  }

  .install-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs, 0.25rem);
    padding: var(--spacing-sm, 0.5rem) var(--spacing-md, 1rem);
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
  }

  .install-icon {
    font-size: 1rem;
  }

  .install-body {
    padding: var(--spacing-md, 1rem);
  }

  .command-wrapper {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm, 0.5rem);
    background: var(--color-bg, #ffffff);
    border: 1px solid var(--color-border, #e9ecef);
    border-radius: var(--radius-sm, 4px);
    padding: var(--spacing-sm, 0.5rem);
    overflow: hidden;
  }

  .command-text {
    flex: 1;
    font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
    font-size: 0.75rem;
    color: var(--color-text, #212529);
    background: none;
    border: none;
    overflow-x: auto;
    white-space: nowrap;
    padding: var(--spacing-xs, 0.25rem);
  }

  .btn-copy {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs, 0.25rem);
    padding: var(--spacing-xs, 0.25rem) var(--spacing-sm, 0.5rem);
    background: var(--color-primary, #667eea);
    color: white;
    border: none;
    border-radius: var(--radius-sm, 4px);
    cursor: pointer;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .btn-copy:hover {
    background: var(--color-primary-dark, #5a6fd6);
    transform: translateY(-1px);
  }

  .btn-copy:active {
    transform: translateY(0);
  }

  .btn-copy.copied {
    background: #28a745;
  }

  .copy-icon {
    font-size: 0.875rem;
  }

  .install-hint {
    margin: var(--spacing-sm, 0.5rem) 0 0;
    font-size: 0.75rem;
    color: var(--color-text-secondary, #6c757d);
  }

  @media (max-width: 480px) {
    .command-text {
      font-size: 0.625rem;
    }
  }
</style>

<script>
  document.querySelectorAll('.install-command-container').forEach(container => {
    const copyBtn = container.querySelector('.btn-copy');
    const commandText = container.querySelector('.command-text');

    if (copyBtn && commandText) {
      copyBtn.addEventListener('click', async () => {
        try {
          const text = commandText.textContent?.trim() || '';
          await navigator.clipboard.writeText(text);

          // æ˜¾ç¤ºå¤åˆ¶æˆåŠŸ
          const copyTextEl = copyBtn.querySelector('.copy-text');
          const copyIconEl = copyBtn.querySelector('.copy-icon');
          const originalText = copyTextEl?.textContent;
          const originalIcon = copyIconEl?.textContent;

          if (copyTextEl) copyTextEl.textContent = 'å·²å¤åˆ¶';
          if (copyIconEl) copyIconEl.textContent = 'âœ“';
          copyBtn.classList.add('copied');

          // 2ç§’åæ¢å¤
          setTimeout(() => {
            if (copyTextEl && originalText) copyTextEl.textContent = originalText;
            if (copyIconEl && originalIcon) copyIconEl.textContent = originalIcon;
            copyBtn.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('å¤åˆ¶å¤±è´¥:', err);
        }
      });
    }
  });
</script>
