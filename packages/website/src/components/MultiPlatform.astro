<style>
  .multi-platform-section {
    padding: var(--spacing-3xl) 0;
    background: var(--color-bg);
    position: relative;
    overflow: hidden;
  }

  .multi-platform-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-primary), transparent);
    opacity: 0.3;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-3xl);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: -0.02em;
    margin-bottom: var(--spacing-sm);
  }

  .bracket {
    color: var(--color-primary);
    font-family: var(--font-mono);
  }

  .section-subtitle {
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: 1rem;
  }

  .platforms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .platform-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    padding: var(--spacing-lg);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
  }

  .platform-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--color-primary-dim);
    transform: translateY(-4px);
  }

  .platform-card.featured {
    border-color: var(--color-primary);
    background: linear-gradient(145deg, var(--color-bg-secondary) 0%, var(--color-primary-dim) 100%);
  }

  .platform-header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .platform-icon {
    font-size: 2rem;
  }

  .platform-info {
    flex: 1;
  }

  .platform-name {
    font-family: var(--font-display);
    font-size: 1.25rem;
    color: var(--color-text);
    margin: 0 0 var(--spacing-xs) 0;
  }

  .platform-badge {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    padding: 2px 8px;
    border-radius: var(--radius-full);
    text-transform: uppercase;
  }

  .platform-badge.native {
    background: var(--color-success-bg);
    color: var(--color-success);
    border: 1px solid var(--color-success);
  }

  .platform-badge.convert {
    background: var(--color-warning-bg);
    color: var(--color-warning);
    border: 1px solid var(--color-warning);
  }

  .platform-body {
    flex: 1;
  }

  .platform-desc {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: var(--spacing-md);
  }

  .code-block {
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    overflow-x: auto;
  }

  .code-block code {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-primary);
    white-space: nowrap;
  }

  .platform-footer {
    margin-top: var(--spacing-md);
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--color-border);
  }

  .difficulty {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .cta-section {
    text-align: center;
    margin-top: var(--spacing-3xl);
  }

  .btn-outline {
    display: inline-block;
    padding: var(--spacing-md) var(--spacing-xl);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-decoration: none;
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
  }

  .btn-outline:hover {
    background: var(--color-primary-dim);
    box-shadow: var(--glow-primary);
  }

  @media (max-width: 768px) {
    .platforms-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }
</style>
