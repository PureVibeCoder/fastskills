<script>
  // ä¸‹è½½æŒ‰é’®ç‚¹å‡»äº‹ä»¶
  document.querySelectorAll('.btn-download-pack').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const packId = (e.currentTarget as HTMLElement).dataset.packId;
      if (!packId) return;

      const button = e.currentTarget as HTMLButtonElement;
      const originalText = button.innerHTML; // Keeping innerHTML to preserve icons
      
      // Update text but keep structure if possible, or simple text for loading
      button.textContent = 'Preparing...';
      button.disabled = true;
      button.classList.add('loading');

      try {
        const { skillPackages } = await import('../data/packages');
        const { skills } = await import('../data/skills');
        const { downloadSkillPack } = await import('../utils/packager');

        const pack = skillPackages.find(p => p.id === packId);
        if (pack) {
          const packSkills = skills.filter(s => pack.skills.includes(s.id));
          await downloadSkillPack(packSkills, pack.name);
        }

        button.textContent = 'âœ… Started';
        button.classList.add('btn-success');
        setTimeout(() => {
          button.innerHTML = originalText;
          button.classList.remove('btn-success', 'loading');
          button.disabled = false;
        }, 2000);
      } catch (error) {
        console.error('Download failed:', error);
        button.textContent = 'âŒ Failed';
        setTimeout(() => {
          button.innerHTML = originalText;
          button.disabled = false;
          button.classList.remove('loading');
        }, 2000);
      }
    });
  });
</script>
