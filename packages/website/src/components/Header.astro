---
const navItems = [
  { name: '功能', href: '#features' },
  { name: '技能包', href: '#all-packages' },
  { name: '技能库', href: '#skills' },
  { name: 'GitHub', href: 'https://github.com/PureVibeCoder/fastskills' }
];
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">
      <div class="logo-icon-wrapper">
        <svg class="logo-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L2 7L12 12L22 7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <path d="M2 17L12 22L22 17" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <path d="M2 12L12 17L22 12" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
        </svg>
      </div>
      <span class="logo-text">FastSkills<span class="logo-dot">.</span></span>
    </a>

    <nav class="nav">
      {navItems.map(item => (
        <a href={item.href} class="nav-link">
          <span class="nav-link-text">{item.name}</span>
          <span class="nav-link-glow"></span>
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(3, 4, 7, 0.85);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--color-border);
    height: 70px;
    display: flex;
    align-items: center;
  }

  .header-container {
    width: 100%;
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    text-decoration: none;
    group: logo;
  }

  .logo-icon-wrapper {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 240, 255, 0.1);
    border: 1px solid rgba(0, 240, 255, 0.2);
    border-radius: var(--radius-sm);
    transition: all var(--transition-base);
  }

  .logo:hover .logo-icon-wrapper {
    background: rgba(0, 240, 255, 0.2);
    box-shadow: 0 0 15px rgba(0, 240, 255, 0.4);
    transform: rotate(180deg);
  }

  .logo-icon {
    width: 20px;
    height: 20px;
    color: var(--color-primary);
  }

  .logo-text {
    font-family: var(--font-display);
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .logo-dot {
    color: var(--color-primary);
  }

  .nav {
    display: flex;
    gap: var(--spacing-lg);
  }

  .nav-link {
    position: relative;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.5rem 0;
    transition: color var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-primary);
    text-shadow: 0 0 8px rgba(0, 240, 255, 0.5);
  }

  .nav-link-glow {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--color-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--transition-base);
    box-shadow: 0 0 8px var(--color-primary);
  }

  .nav-link:hover .nav-link-glow {
    transform: scaleX(1);
    transform-origin: left;
  }

  @media (max-width: 768px) {
    .nav {
      gap: var(--spacing-md);
    }
    
    .nav-link {
      font-size: 0.75rem;
    }
    
    .logo-text {
      font-size: 1.125rem;
    }
  }
</style>
