---
import Layout from '../../layouts/Layout.astro';
import { skills, type Skill } from '../../data/skills';
import fs from 'node:fs';
import path from 'node:path';
import { marked } from 'marked';

// Pre-render all skill pages at build time
export const prerender = true;

// Load content map at build time
let skillsContent: Record<string, string> = {};
try {
  // During build, we are running in node
  const contentPath = path.resolve('./public/data/skills-content.json');
  if (fs.existsSync(contentPath)) {
    const raw = fs.readFileSync(contentPath, 'utf-8');
    skillsContent = JSON.parse(raw);
  }
} catch (e) {
  console.warn('Failed to load skills content:', e);
}

export function getStaticPaths() {
  return skills.map((skill) => ({
    params: { id: skill.id },
    props: { skill }
  }));
}

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;

// Enrich skill with content from external JSON if not present
const content = skillsContent[skill.id] || skill.content || 'Content not available. Run build script to generate.';

// Render Markdown to HTML
const htmlContent = marked.parse(content);

const sourceLabels: Record<string, string> = {
  anthropic: 'Anthropic',
  claudekit: 'ClaudeKit',
  community: 'Community',
  composio: 'Composio',
  voltagent: 'VoltAgent',
  scientific: 'Scientific',
  obsidian: 'Obsidian',
  planning: 'Planning',
  superpowers: 'Superpowers',
  'deep-research': 'DeepResearch',
  'skill-from-masters': 'SkillFromMasters'
};

const sourceLabel = sourceLabels[skill.source] || skill.source;
---

<Layout title={skill.name} description={skill.description}>
  <div class="skill-detail-page">
    <div class="container">
      <!-- Breadcrumb Navigation -->
      <nav class="breadcrumb">
        <a href="/" class="breadcrumb-link">HOME</a>
        <span class="breadcrumb-separator">/</span>
        <a href="/#skills" class="breadcrumb-link">SKILLS</a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">{skill.name}</span>
      </nav>

      <!-- Skill Header -->
      <header class="skill-header">
        <div class="skill-icon-wrapper">
          <span class="skill-icon">{skill.category.icon}</span>
        </div>
        <div class="skill-header-content">
          <h1 class="skill-title">{skill.name}</h1>
          <div class="skill-meta">
            <span class="skill-source-badge">{sourceLabel}</span>
            <span class="skill-category">{skill.category.name}</span>
          </div>
        </div>
      </header>

      <!-- Skill Description -->
      <section class="skill-section">
        <h2 class="section-title">DESCRIPTION</h2>
        <p class="skill-description">{skill.description}</p>
      </section>

      <!-- Triggers -->
      <section class="skill-section">
        <h2 class="section-title">TRIGGERS</h2>
        <div class="triggers-list">
          {skill.triggers.map((trigger) => (
            <span class="trigger-tag">/{trigger}</span>
          ))}
        </div>
      </section>

      <!-- Skill Content (static from build time) -->
      <section class="skill-section skill-content-section">
        <h2 class="section-title">SKILL.md CONTENT</h2>
        <div class="skill-content-wrapper">
          <article id="skill-content" class="skill-content markdown-content" set:html={htmlContent}></article>
        </div>
      </section>

      <!-- Actions -->
      <section class="skill-actions">
        <button
          class="btn btn-primary btn-download"
          data-skill-id={skill.id}
        >
          <span class="btn-icon">â†“</span>
          <span class="btn-text">DOWNLOAD SKILL</span>
        </button>
        <a href="/#skills" class="btn btn-outline">
          <span class="btn-text">BACK TO SKILLS</span>
        </a>
      </section>
    </div>
  </div>
</Layout>

<style>
  .skill-detail-page {
    min-height: 100vh;
    padding: 2rem 0 4rem;
    background: var(--color-background);
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 2rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
  }

  .breadcrumb-link {
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb-link:hover {
    color: var(--color-primary);
  }

  .breadcrumb-separator {
    color: var(--color-border);
  }

  .breadcrumb-current {
    color: var(--color-primary);
    text-transform: uppercase;
  }

  /* Skill Header */
  .skill-header {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .skill-icon-wrapper {
    width: 4rem;
    height: 4rem;
    background: rgba(0, 240, 255, 0.1);
    border: 1px solid rgba(0, 240, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    flex-shrink: 0;
    box-shadow: 0 0 20px rgba(0, 240, 255, 0.15);
  }

  .skill-header-content {
    flex: 1;
  }

  .skill-title {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem;
    letter-spacing: -0.02em;
    text-transform: uppercase;
  }

  .skill-meta {
    display: flex;
    gap: 1rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .skill-source-badge {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-primary);
    background: rgba(0, 240, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border: 1px solid rgba(0, 240, 255, 0.3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-category {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  /* Sections */
  .skill-section {
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-title::before {
    content: '>';
    color: var(--color-secondary);
  }

  .skill-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
  }

  /* Triggers */
  .triggers-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .trigger-tag {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-border);
    transition: all 0.2s;
  }

  .trigger-tag:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background: rgba(0, 240, 255, 0.05);
  }

  /* Skill Content */
  .skill-content-section {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid var(--color-border);
    padding: 1.5rem;
    margin-left: -1.5rem;
    margin-right: -1.5rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }

  .skill-content-wrapper {
    position: relative;
  }

  .skill-content {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    word-break: break-word;
    max-height: 600px;
    overflow-y: auto;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .skill-content.markdown-content {
    white-space: normal;
  }

  .skill-content.loading {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 200px;
  }

  .loading-indicator {
    text-align: center;
  }

  .loading-text {
    color: var(--color-primary);
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .skill-content::-webkit-scrollbar {
    width: 6px;
  }

  .skill-content::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.3);
  }

  .skill-content::-webkit-scrollbar-thumb {
    background: rgba(0, 240, 255, 0.3);
  }

  .skill-content::-webkit-scrollbar-thumb:hover {
    background: var(--color-primary);
  }

  /* Actions */
  .skill-actions {
    display: flex;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
  }

  .btn-primary {
    background: rgba(0, 240, 255, 0.1);
    border: 1px solid var(--color-primary);
    color: var(--color-primary);
  }

  .btn-primary:hover {
    background: var(--color-primary);
    color: #000;
    box-shadow: 0 0 20px rgba(0, 240, 255, 0.4);
  }

  .btn-outline {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  .btn-outline:hover {
    border-color: var(--color-text);
    color: var(--color-text);
    background: rgba(255, 255, 255, 0.05);
  }

  .btn-icon {
    font-size: 1em;
  }

  /* Error state */
  .skill-content.error {
    color: var(--color-secondary);
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .skill-header {
      flex-direction: column;
      gap: 1rem;
    }

    .skill-title {
      font-size: 1.75rem;
    }

    .skill-actions {
      flex-direction: column;
    }

    .skill-content-section {
      margin-left: -2rem;
      margin-right: -2rem;
      padding-left: 2rem;
      padding-right: 2rem;
    }
  }
</style>

<script define:vars={{ skillId: skill.id, skillContent: content }}>
  // Download skill function - uses static content from build time
  function downloadSkill() {
    if (!skillContent) {
      alert('Content not available for this skill.');
      return;
    }

    const blob = new Blob([skillContent], { type: 'text/markdown' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.href = url;
    link.download = `${skillId}-SKILL.md`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
  }

  // Setup event listeners
  document.addEventListener('DOMContentLoaded', () => {
    const downloadBtn = document.querySelector('.btn-download');
    if (downloadBtn) {
      downloadBtn.addEventListener('click', downloadSkill);
    }
  });
</script>
